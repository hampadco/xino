<!DOCTYPE html>
<html lang="fa" dir="rtl">

<head>
    <!-- Metas -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <meta name="keywords" content="غرفه, نمایشگاه, طراحی و ساخت, منحصر به فرد , سازه فلزی , سازه چوبی , خدمات مهندسی">
    <meta name="description" content="@ViewBag.MetaDescription">
    <meta name="author" content="XinoSazeh">

    <!-- Title  -->
    <title>@ViewBag.Title</title>

    <!-- Favicon -->
    <link rel="shortcut icon" href="/assets/img/icons/xino.png" title="Favicon" sizes="16x16">

    <!-- bootstrap 5 -->
    <link rel="stylesheet" href="/assets/css/lib/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">

    <!-- fontawesome icons  -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <!-- animate css  -->
    <link rel="stylesheet" href="/assets/css/lib/animate.css">
    <!-- fancybox popup  -->
    <link rel="stylesheet" href="/assets/css/lib/jquery.fancybox.css">
    <!-- lity popup  -->
    <link rel="stylesheet" href="/assets/css/lib/lity.css">
    <!-- swiper slider  -->
    <link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
    <!-- Nazanin font -->
    <link rel="stylesheet" href="/css/nazanin-font.css">
    <!-- common style -->
    <link rel="stylesheet" href="/assets/css/common_style.css">
    <!-- home style -->
    <link rel="stylesheet" href="/assets/css/home_1.css">

    <!-- استایل‌های RTL -->
    <link rel="stylesheet" href="/assets/css/rtl.css">

    <!-- تغییر بوت‌استرپ به نسخه RTL -->
    <link rel="stylesheet" href="/assets/css/lib/bootstrap.rtl.min.css">

</head>

<body class="home-st1 canvas-body" style="background-color: #000000;">
    <canvas id="background-canvas"></canvas>

    <div class="body-lines">
        <span></span>
        <span></span>
        <span></span>
        <span></span>
    </div>


    <!--  start cursor  -->
    <div class="mouse-cursor cursor-outer"></div>
    <div class="mouse-cursor cursor-inner"></div>
    <!--  end cursor  -->

    <!-- ====== Start Loading ====== -->
    <div class="loader-wrap">
        <svg viewbox="0 0 1000 1000" preserveaspectratio="none">
            <path id="svg" d="M0,1005S175,995,500,995s500,5,500,5V0H0Z"></path>
        </svg>

        <div class="loader-wrap-heading">
            <div class="loading-content">
                <div class="loading-text">در حال بارگذاری</div>
                <div class="loading-spinner">
                    <div class="spinner"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- ====== End Loading ====== -->



    <div id="scrollsmoother-container" class="scrollsmoother-container">

        <!--  Start navbar  -->
        <nav class="navbar navbar-expand-lg navbar-dark ui-navbar-st1">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <img src="/assets/img/icons/xino.png" alt="logo">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" ? "active" : "")"
                                href="/">خانه</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "About" ? "active" : "")"
                                href="/about">درباره ما</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Services" ? "active" : "")"
                                href="/services">خدمات</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Portfolio" ? "active" : "")"
                                href="/portfolio">نمونه کارها</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Contact" ? "active" : "")"
                                href="/contact">تماس با ما</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
        <!--  End navbar  -->


        @RenderBody()

        <!--  Start footer  -->
        <footer class="bg-dark text-white py-5">
            <div class="container">
                <div class="row">
                    <div class="col-lg-4 mb-4">
                        <h4 class="text-uppercase mb-4">تماس با ما</h4>
                        <p class="mb-2"><i class="fas fa-envelope"></i> <a href="mailto:info@xinosazeh.com"
                                class="text-white">info@xinosazeh.com</a></p>
                        <p><i class="fas fa-phone"></i> <a href="tel:09124058041" class="text-white">۰۹۱۲-۴۰۵۸۰۴۱</a>
                        </p>
                    </div>
                    <div class="col-lg-4 mb-4">
                        <h4 class="text-uppercase mb-4">شبکه‌های اجتماعی</h4>
                        <div class="social-icons">
                            <a href="#" class="text-white me-3"><i class="fab fa-instagram"></i></a>
                            <a href="#" class="text-white me-3"><i class="fab fa-telegram"></i></a>
                            <a href="#" class="text-white me-3"><i class="fab fa-linkedin"></i></a>
                        </div>
                    </div>
                    <div class="col-lg-4 text-lg-end">
                        <a href="/" class="d-block mb-4">
                            <img src="/assets/img/icons/xino.png" alt="logo" style="height: 100px;">
                        </a>
                        <a href="#" class="btn btn-outline-light"><i class="fas fa-angle-up"></i> بازگشت به بالا</a>
                    </div>
                </div>
                <div class="row mt-4">
                    <div class="col text-center">
                        <p class="mb-0">&copy; 2023 XinoSazeh. تمامی حقوق محفوظ است.</p>
                    </div>
                </div>
            </div>
        </footer>

        <style>
            footer {
                background: linear-gradient(135deg, #181818, #202020);
                /* پس‌زمینه گرادیانت */
            }

            footer h4 {
                font-weight: bold;
                /* وزن فونت */
                border-bottom: 2px solid #ffffff;
                /* خط زیر عنوان */
                padding-bottom: 10px;
                /* فاصله پایین */
                transition: color 0.3s ease;
                /* افکت تغییر رنگ */
            }

            footer h4:hover {
                color: #ffcc00;
                /* رنگ طلایی برای افکت هاور */
            }

            .social-icons a {
                font-size: 24px;
                /* اندازه آیکون‌ها */
                transition: transform 0.3s ease;
                /* افکت بزرگ شدن */
            }

            .social-icons a:hover {
                transform: scale(1.2);
                /* بزرگ شدن آیکون‌ها در هاور */
            }

            .btn-outline-light {
                border-color: #ffffff;
                /* رنگ حاشیه دکمه */
                color: #ffffff;
                /* رنگ متن دکمه */
                transition: background-color 0.3s ease, color 0.3s ease;
                /* افکت تغییر رنگ */
            }

            .btn-outline-light:hover {
                background-color: #ffffff;
                /* رنگ پس‌زمینه در هاور */
                color: #343a40;
                /* تغییر رنگ متن در هاور */
            }

            @* .logo {
                font-size: 1.5rem;
                /* اندازه لوگو */
                font-weight: bold;
                /* وزن فونت لوگو */
                color: #ffcc00;
                /* رنگ طلایی برای لوگو */
            } *@

            /* Media Query برای موبایل */
            @@media(max - width: 767px) {
                    footer .col-lg-4 {
                        text-align: center;
                        /* مرکز کردن محتوای هر ستون */
                        margin-bottom: 30px;
                        /* فاصله بین ستون‌ها */
                    }

                    .social-icons {
                        justify-content: center;
                        /* مرکز کردن آیکون‌ها */
                    }

                    .social-icons a {
                        margin: 0 10px;
                        /* فاصله بین آیکون‌ها */
                    }

                    .btn-outline-light {
                        width: 100%;
                        /* عرض دکمه به 100% */
                        margin-top: 20px;
                        /* فاصله بالای دکمه */
                    }
                }
            </style>
            <!--  End footer  -->

        </div>


        <!-- Load libraries first -->
        <script src="/assets/js/lib/jquery-3.0.0.min.js"></script>
        <script src="/assets/js/lib/jquery-migrate-3.0.0.min.js"></script>
        <script src="/assets/js/lib/bootstrap.bundle.min.js"></script>
        <script src="/assets/js/lib/wow.min.js"></script>
        <script src="/assets/js/lib/jquery.fancybox.js"></script>
        <script src="/assets/js/lib/lity.js"></script>
        <script src="/assets/js/lib/swiper8-bundle.min.js"></script>
        <script src="/assets/js/lib/jquery.waypoints.min.js"></script>
        <script src="/assets/js/lib/jquery.counterup.js"></script>
        <script src="/assets/js/lib/parallaxie.js"></script>
        <script src="/assets/js/lib/bundle.js"></script>

        <!-- GSAP -->
        <script src="/assets/js/gsap_lib/gsap.min.js"></script>
        <script src="/assets/js/gsap_lib/ScrollSmoother.min.js"></script>
        <script src="/assets/js/gsap_lib/ScrollTrigger.min.js"></script>
        <script src="/assets/js/gsap_lib/SplitText.min.js"></script>

        <!-- Common scripts -->
        <script src="/assets/js/common.js"></script>

        <!-- Page specific scripts -->
        <script src="/assets/js/home_1.js"></script>

        <!-- Canvas script -->
        <script src="/assets/js/canvas.js"></script>

        @RenderSection("Scripts", required: false)

        <style>
            .custom-button-prev,
            .custom-button-next {
                /* برای وسط‌چین کردن عمودی */
                background-color: rgba(0, 0, 0, 0.5);
                color: white;
                border: none;
                padding: 10px;
                cursor: pointer;
            }
        </style>
    </body>

    </html>